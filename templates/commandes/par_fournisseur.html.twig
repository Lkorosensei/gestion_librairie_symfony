{% extends 'base.html.twig' %}

{% block title %} Commandes - Par Fournisseur {% endblock %}
{% block body %}
<h1> Commandes par Fournisseur: </h1>
    <select name"commandes_par_fournisseur">
        <option value="">Sélectionner un Fournisseur : </option>
        {% for commande in commandes %}
        <option value="{{ commande.getFournisseur().getRaisonSociale() }}"> {{ commande.getFournisseur().getRaisonSociale() }} </option>
        {% endfor %}
    </select>
    <input type="submit" value="Rechercher">
<a href="{{ path('app_commandes') }}"> <button> Retour à la liste </button> </a> 
{# {{ dump(commandes) }} #}
{% endblock %}